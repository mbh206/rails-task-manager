<div class="container">
  <h1><%= @task.title %></h1>
  <blockquote class="bg-light border-solid-1 p-3 rounded w-25 border border-dark"><%= @task.details %></blockquote>
  <p>
    <% if @task.completed %>
      <i class="fa-regular fa-square-check"></i> This task is completed
    <% else %>
      <i class="fa-regular fa-square"></i> This task is not completed yet
    <% end %>
  </p>
  <%= link_to "Back to tasks", tasks_path %> | <%= link_to "Edit task", edit_path %>
</div>
