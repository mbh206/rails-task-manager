<div class="container">
  <h1>Title Here</h1>
  <ul>
    <% @tasks.each do |task| %>
        <li class="list-unstyled" >
          <% if task.completed %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          <% end %>
          <%= link_to "#{task.title}", task_path(task.id), class: "text-decoration-none text-reset" %>
          <%= link_to task_path(task), class: "text-decoration-none text-reset", data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
    <% end %>
  </ul>
  <%= link_to "+ Add a new task", new_path %>
</div>
